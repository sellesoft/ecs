$ local metadata = require "reflect.Metadata"

@lpp.import "game/shared/component/Component.lh"

@lpp.import "core/StringHash.lh"
@lpp.import "reflect/types/StringMap.lh"

namespace cl
{

typedef reflect::StringMap<reflect::StringMap<StringHash>> VisualsMap;

struct Visualizer : Component
{
