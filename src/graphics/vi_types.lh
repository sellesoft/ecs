/*
 *  Definition of the common vertex/index types. Eventually we should 
 *  allow stuff to define this but for now this is what it is.
 *
 *  Pulling out into its own file because apparently these have lived in 
 *  Geo.lh forever and I do not want to include all of that into GameRenderer
 *  just to get this thing working.
 */

@lpp.import "math/vec.lh"

namespace gfx
{

struct Vertex
{
  vec2f pos;
  vec2f uv;
  u32   color;
};

typedef u32 Index;

}
