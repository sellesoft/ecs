/*
 *  A pointer which internally stores its type. For polymorphic 
 *  data like Components.
 */

$ require "common"

#include "iro/Unicode.h"

@lpp.import "reflect/TypeId.lh"

using namespace iro;

namespace reflect
{

/* ============================================================================
 */
template<typename T>
struct TypedPtr
{
  using TPtr = T;

  rtr::TypeId type;

  T* ptr;
};

}
